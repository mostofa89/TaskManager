# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Configuration
# Option 1: Use DATABASE_URL (for PostgreSQL or full MySQL connection string)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# DATABASE_URL=mysql://user:password@host:3306/dbname

# Option 2: Use individual MySQL settings (for local development)
DB_NAME=taskmanager
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# Email Configuration (for password reset)
# For development: use console backend (prints emails to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production: use SMTP (Gmail example)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password (for Gmail, use app password, not regular password)
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Note: 
# - For local dev with MySQL: Set DB_HOST=localhost and other DB_* vars
# - For Render with PostgreSQL: Set DATABASE_URL from Render dashboard
# - For Render with external MySQL: Set DB_HOST to your MySQL host (NOT localhost)
# - For email: Use console backend locally, SMTP in production
